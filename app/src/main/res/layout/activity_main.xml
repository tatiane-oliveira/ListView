<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.iossenac.listview.MainActivity">


    <TextView
        android:id="@+id/lblPais"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="33dp"
        android:text="PaÃ­s:"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/txtPais"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="9"
        android:inputType="textPersonName"
        android:layout_alignBaseline="@+id/lblPais"
        android:layout_alignBottom="@+id/lblPais"
        android:layout_toEndOf="@+id/lblPais"
        android:layout_marginStart="14dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Catalogar"
        android:layout_marginEnd="11dp"
        android:layout_alignBaseline="@+id/txtPais"
        android:layout_alignBottom="@+id/txtPais"
        android:layout_alignParentEnd="true"
        android:onClick="catalogarPais"/>

    <ListView
        android:id="@+id/lvPais"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/button"
        android:layout_marginTop="10dp" />
</RelativeLayout>
